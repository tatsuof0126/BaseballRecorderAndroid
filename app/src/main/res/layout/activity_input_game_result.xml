<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tatsuo.baseballrecorder.InputGameResultActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scrollView"
            android:focusable="false"
            android:focusableInTouchMode="false">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="日付"
                        android:id="@+id/textView"
                        android:layout_weight="0.2"
                        android:focusable="true"
                        android:focusableInTouchMode="true">

                        <requestFocus />

                    </TextView>

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:inputType="text|number"
                        android:ems="10"
                        android:id="@+id/year"
                        android:layout_weight="0.2"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="年"
                        android:id="@+id/textView2"
                        android:layout_weight="0.1" />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:inputType="text|number"
                        android:ems="10"
                        android:id="@+id/month"
                        android:layout_weight="0.15"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="月"
                        android:id="@+id/textView3"
                        android:layout_weight="0.1" />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:inputType="text|number"
                        android:ems="10"
                        android:id="@+id/day"
                        android:layout_weight="0.15"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="日"
                        android:id="@+id/textView4"
                        android:layout_weight="0.1" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="場所"
                        android:id="@+id/textView5"
                        android:layout_weight="0.2" />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/place"
                        android:layout_weight="0.8"
                        android:inputType="text" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="チーム"
                        android:id="@+id/textView6"
                        android:layout_weight="0.2" />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/myteam"
                        android:layout_weight="0.8"
                        android:inputType="text" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="相手チーム"
                        android:id="@+id/textView7"
                        android:layout_weight="0.35" />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/otherteam"
                        android:layout_weight="0.65"
                        android:inputType="text" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="試合結果"
                        android:id="@+id/textView8"
                        android:layout_weight="0.35" />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:inputType="text|number"
                        android:ems="10"
                        android:id="@+id/myscore"
                        android:layout_weight="0.2"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="対"
                        android:id="@+id/textView9"
                        android:layout_weight="0.1" />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:inputType="text|number"
                        android:ems="10"
                        android:id="@+id/otherscore"
                        android:layout_weight="0.2"
                        android:gravity="center" />

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.15" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="先攻/後攻"
                        android:id="@+id/textView17" />

                    <Space
                        android:layout_width="15dp"
                        android:layout_height="40dp" />

                    <RadioGroup android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/semeradio">

                        <RadioButton
                            android:text="先攻  "
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/semeradio1"
                            android:layout_weight="1" />

                        <RadioButton
                            android:text="後攻  "
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/semeradio2"
                            android:layout_weight="1" />

                    </RadioGroup>

                </LinearLayout>

                <!--
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="打順/守備"
                        android:id="@+id/textView18" />

                    <Space
                        android:layout_width="15dp"
                        android:layout_height="20dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="１番ピッチャー"
                        android:id="@+id/dajunshubi" />

                    <Space
                        android:layout_width="10dp"
                        android:layout_height="20dp" />

                    <Button
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" 設定 "
                        android:id="@+id/setdajunshubi_button" />

                </LinearLayout>
                -->

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="打順　　 "
                        android:id="@+id/textView19" />

                    <Space
                        android:layout_width="15dp"
                        android:layout_height="40dp" />

                    <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/dajunspinner"
                        android:spinnerMode="dialog"
                        android:elevation="8dp" />

                    <Space
                        android:layout_width="10dp"
                        android:layout_height="20dp" />


                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="守備位置 "
                        android:id="@+id/textView20" />

                    <Space
                        android:layout_width="15dp"
                        android:layout_height="40dp" />


                    <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/shubi1spinner"
                        android:layout_weight="1"
                        android:spinnerMode="dialog" />

                    <Space
                        android:layout_width="10dp"
                        android:layout_height="20dp"
                        android:visibility="gone" />

                    <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/shubi2spinner"
                        android:layout_weight="1"
                        android:elevation="11dp"
                        android:visibility="visible"
                        android:spinnerMode="dialog" />

                    <Space
                        android:layout_width="10dp"
                        android:layout_height="20dp"
                        android:visibility="gone" />

                    <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/shubi3spinner"
                        android:layout_weight="1"
                        android:elevation="11dp"
                        android:visibility="gone"
                        android:spinnerMode="dialog" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="打撃成績"
                        android:layout_weight="0.15"
                        android:id="@+id/textView10" />

                    <Space
                        android:layout_width="20dp"
                        android:layout_height="20dp" />

                    <Button
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" 追加 "
                        android:id="@+id/add_button" />

                    <Space
                        android:layout_width="15dp"
                        android:layout_height="20dp" />

                    <Button
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="変更"
                        android:id="@+id/modify_button"
                        android:visibility="invisible" />

                    <Space
                        android:layout_width="15dp"
                        android:layout_height="20dp" />

                    <Button
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="削除"
                        android:id="@+id/delete_button"
                        android:visibility="invisible" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/batting_result_list">

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="打点"
                        android:id="@+id/textView11"
                        android:layout_weight="0.2"
                        android:gravity="right" />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:inputType="text|number"
                        android:ems="10"
                        android:id="@+id/daten"
                        android:layout_weight="0.15"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="得点"
                        android:id="@+id/textView12"
                        android:layout_weight="0.2"
                        android:gravity="right" />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:inputType="text|number"
                        android:ems="10"
                        android:id="@+id/tokuten"
                        android:layout_weight="0.15"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="失策"
                        android:id="@+id/textView13"
                        android:layout_weight="0.2"
                        android:gravity="right" />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:inputType="text|number"
                        android:ems="10"
                        android:id="@+id/error"
                        android:layout_weight="0.15"
                        android:gravity="center" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="盗塁"
                        android:id="@+id/textView15"
                        android:layout_weight="0.2"
                        android:gravity="right" />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:inputType="text|number"
                        android:ems="10"
                        android:id="@+id/steal"
                        android:layout_weight="0.15"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="盗塁死"
                        android:id="@+id/textView16"
                        android:layout_weight="0.2"
                        android:gravity="right" />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:inputType="text|number"
                        android:ems="10"
                        android:id="@+id/stealout"
                        android:layout_weight="0.15"
                        android:gravity="center" />

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.35" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="メモ"
                        android:id="@+id/textView14" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textMultiLine"
                        android:ems="10"
                        android:id="@+id/memo"
                        android:gravity="left|top" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:gravity="center_horizontal">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="保存"
                        android:id="@+id/save_button" />
                </LinearLayout>

            </LinearLayout>

        </ScrollView>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ads"
            android:gravity="center_vertical|center_horizontal"
            android:visibility="invisible"
            android:focusableInTouchMode="true"
            android:focusable="true">



        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
