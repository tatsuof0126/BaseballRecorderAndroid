<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tatsuo.baseballrecorder.InputPitchingResultActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scrollView">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="投球回"
                        android:id="@+id/textView"
                        android:layout_weight="0.25"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:textAppearance="?android:attr/textAppearanceMedium">

                        <requestFocus />

                    </TextView>

                    <Button
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="入力"
                        android:id="@+id/inning_input_button"
                        android:layout_weight="0.2" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="5回2/3"
                        android:id="@+id/inningstr"
                        android:layout_weight="0.25" />

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="変更"
                        android:id="@+id/inning_change_button"
                        style="?android:attr/buttonStyleSmall"
                        android:layout_weight="0.2"
                        android:visibility="gone" />

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="被安打"
                        android:id="@+id/textView8"
                        android:layout_weight="0.2" />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:inputType="text|number"
                        android:ems="10"
                        android:id="@+id/hianda"
                        android:layout_weight="0.15"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="　被本塁打"
                        android:id="@+id/textView9"
                        android:layout_weight="0.35" />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:inputType="text|number"
                        android:ems="10"
                        android:id="@+id/hihomerun"
                        android:layout_weight="0.15"
                        android:gravity="center" />

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.15" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="三振"
                        android:id="@+id/textView11"
                        android:layout_weight="0.15" />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:inputType="text|number"
                        android:ems="10"
                        android:id="@+id/dassanshin"
                        android:layout_weight="0.15"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="四球 "
                        android:id="@+id/textView12"
                        android:layout_weight="0.2"
                        android:gravity="right" />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:inputType="text|number"
                        android:ems="10"
                        android:id="@+id/yoshikyu"
                        android:layout_weight="0.15"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="死球 "
                        android:id="@+id/textView13"
                        android:layout_weight="0.2"
                        android:gravity="right" />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:inputType="text|number"
                        android:ems="10"
                        android:id="@+id/yoshikyu2"
                        android:layout_weight="0.15"
                        android:gravity="center" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="失点"
                        android:id="@+id/textView27"
                        android:layout_weight="0.15" />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:inputType="text|number"
                        android:ems="10"
                        android:id="@+id/shitten"
                        android:layout_weight="0.15"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="自責 "
                        android:id="@+id/textView29"
                        android:layout_weight="0.2"
                        android:gravity="right" />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:inputType="text|number"
                        android:ems="10"
                        android:id="@+id/jisekiten"
                        android:layout_weight="0.15"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="完投 "
                        android:id="@+id/textView31"
                        android:layout_weight="0.2"
                        android:gravity="right" />

                    <CheckBox
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/kanto"
                        android:layout_weight="0.15" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="投球数"
                        android:id="@+id/textView5"
                        android:layout_weight="0.2" />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/tamakazu"
                        android:layout_weight="0.2"
                        android:inputType="text|number"
                        android:gravity="center" />

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="20px"
                        android:layout_weight="0.6" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="勝敗"
                        android:id="@+id/textView6"
                        android:layout_weight="0.2" />

                    <Button
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="入力"
                        android:id="@+id/sekinin_input_button"
                        android:layout_weight="0.2" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="勝利投手"
                        android:id="@+id/sekininstr"
                        android:layout_weight="0.3" />

                    <Button
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="変更"
                        android:id="@+id/sekinin_change_button"
                        android:layout_weight="0.2"
                        android:visibility="gone" />

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="20px"
                        android:layout_weight="0.3" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:gravity="center_horizontal"
                    android:paddingTop="10dp">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="保存"
                        android:id="@+id/save_button" />
                </LinearLayout>

            </LinearLayout>

        </ScrollView>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ads"
            android:gravity="center_vertical|center_horizontal"
            android:visibility="invisible"
            android:focusable="true"
            android:focusableInTouchMode="true">



        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
